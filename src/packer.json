{
    "variables": {
        "ami_name": "",
        "dockerhub_user": "{{env `DOCKERHUB_USER`}}",
        "dockerhub_password": "{{env `DOCKERHUB_PASSWORD`}}"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "region": "ap-southeast-2",
            "instance_type": "c4.8xlarge",
            "ssh_username": "ec2-user",
            "spot_price": "2",
            "vpc_id": "vpc-ac2eefc8",
            "subnet_id": "subnet-9e548dc7",
            "associate_public_ip_address": true,
            "ami_name": "{{user `ami_name`}}",
            "source_ami_filter": {
                "owners": ["137112412989"],
                "filters": {
                    "name": "amzn-ami-hvm-2016.09.1.20161221-x86_64-gp2"
                }
            },
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sda1",
                    "volume_size": 100,
                    "delete_on_termination": true
                } 
            ]
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "src",
            "destination": "/tmp"
        },
        {
            "type": "shell",
            "script": "src/packer.sh",
            "execute_command": "sudo sh -c '{{ .Vars }} {{ .Path }}'",
            "environment_vars": [
                "DOCKERHUB_USER={{user `dockerhub_user`}}",
                "DOCKERHUB_PASSWORD={{user `dockerhub_password`}}"
            ]
        }
    ]
}
