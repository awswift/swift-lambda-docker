{
    "variables": {
        "ami_name": "",
        "dockerhub_user": "{{env `DOCKERHUB_USER`}}",
        "dockerhub_password": "{{env `DOCKERHUB_PASSWORD`}}"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "region": "ap-southeast-2",
            "instance_type": "c4.8xlarge",
            "ssh_username": "ec2-user",
            "spot_price": "2",
            "vpc_id": "vpc-ac2eefc8",
            "subnet_id": "subnet-52c94636",
            "associate_public_ip_address": true,
            "ami_name": "{{user `ami_name`}}",
            "source_ami": "ami-28cff44b",
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/xvda",
                    "volume_size": 100,
                    "volume_type": "gp2",
                    "snapshot_id": "snap-034e034300f3d96d0",
                    "delete_on_termination": true
                } 
            ]
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "src",
            "destination": "/tmp"
        },
        {
            "type": "shell",
            "script": "src/packer.sh",
            "execute_command": "sudo sh -c '{{ .Vars }} {{ .Path }}'",
            "environment_vars": [
                "DOCKERHUB_USER={{user `dockerhub_user`}}",
                "DOCKERHUB_PASSWORD={{user `dockerhub_password`}}"
            ]
        }
    ]
}
